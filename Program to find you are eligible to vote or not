#include<iostream>
using namespace std;
int main()
{
    int x,a;
    cout<<"Enter your age.\n";
    cin>>x;
    if(x>=18)
    {
        cout<<"You are eligible to vote.\n";
    }
    else
    {
        cout<<"You have to wait for "<<18-x<<" years more.\n";
    }
    cout<<"Do you have your voter id issued? (Please mention 1 for yes or 0 for no)\n";
    cin>>a;
    if(a=1)
    {
        cout<<"You may proceed now."<<"\n"<<"THANK YOU!";
    }
    else
    {
        cout<<"Please visit your nearest centre to apply or apply online through :https://nvsp.com"<<"\n"<<"THANK YOU!";
    }
}
